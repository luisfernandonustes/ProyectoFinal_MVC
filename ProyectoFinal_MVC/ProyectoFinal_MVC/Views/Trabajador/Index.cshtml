@using ProyectoFinal_MVC.Models;
@model List<Trabajador>

@{
    ViewData["title"] = "Registros de Trabajadores";
}

@if (Model.Count != 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Documendo Identidad</th>
                <th scope="col">Profesion</th>
                <th scope="col">Tipo De Trabajador</th>
                <th scope="col">Fecha De Nacimiento</th>
                <th scope="col">ID EmpresaConstructora</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.DocumentoIdentidad</td>
                    <td>@e.Profesion</td>
                    <td>@e.TipoDeTrabajador</td>
                    <td>@e.FechaDeNacimiento</td>
                    <td>@e.EmpresaConstructoraId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
            No hay datos Registrados de los Trabajadores.
        </div>
    </div>
}
