@using ProyectoFinal_MVC.Models;
@model List<Construccion>

@{
    ViewData["title"] = "Registro Contrucciones";
}

@if (Model.Count != 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Lugar De Construccion</th>
                <th scope="col">Tipo</th>
                <th scope="col">Fecha de Inicio</th>
                <th scope="col">Fecha Final</th>
                <th scope="col">ID EmpresaConstructora</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.LugarDeConstruccion</td>
                    <td>@e.Tipo</td>
                    <td>@e.FechaInicio</td>
                    <td>@e.FechaFinal</td>
                    <td>@e.EmpresaConstructoraId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
          <p1>No hay datos Registrados de las Construcciones.</p1>
        </div>

    </div>
    <div class="card">
        <div class="card-body">
         <Center><p2>Desea agregar una Nueva Construccion</p2><br><br>
          <a asp-action="Crear" class="btn btn-success">Crear Construcciones</a></Center>
       </div>
    </div>
}